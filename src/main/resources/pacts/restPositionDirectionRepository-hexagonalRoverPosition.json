{
  "consumer": {
    "name": "restPositionDirectionRepository"
  },
  "interactions": [
    {
      "description": "A get without state",
      "providerStates": [
        {
          "name": "Initial State"
        }
      ],
      "request": {
        "method": "GET",
        "path": "/position"
      },
      "response": {
        "status": 404
      }
    },
    {
      "description": "A post",
      "providerStates": [
        {
          "name": "Rover in any position"
        }
      ],
      "request": {
        "body": {
          "direction": "North",
          "x": 1,
          "y": 1
        },
        "method": "POST",
        "path": "/position"
      },
      "response": {
        "headers": {
          "Content-Type": "application/json"
        },
        "status": 200
      }
    },
    {
      "description": "A get",
      "providerStates": [
        {
          "name": "Rover initialized in 1,1 North"
        }
      ],
      "request": {
        "method": "GET",
        "path": "/position"
      },
      "response": {
        "body": {
          "direction": "North",
          "x": 1,
          "y": 1
        },
        "headers": {
          "Content-Type": "application/json"
        },
        "status": 200
      }
    }
  ],
  "metadata": {
    "pact-jvm": {
      "version": "4.2.21"
    },
    "pactSpecification": {
      "version": "3.0.0"
    }
  },
  "provider": {
    "name": "hexagonalRoverPosition"
  }
}
